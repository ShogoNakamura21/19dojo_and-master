<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout3">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_add"
                android:id="@+id/button_regist" android:background="#333333"
                android:backgroundTint="#333333" android:layout_weight="1" tools:layout_editor_absoluteY="468dp"
                tools:layout_editor_absoluteX="7dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/qr_camera" android:layout_weight="1" android:visibility="visible"
                android:background="#333333"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_sort_by_size"
                android:id="@+id/button_profile" android:layout_weight="1" android:background="#333333"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="392dp"
            android:layout_height="580dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recycler_view" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>