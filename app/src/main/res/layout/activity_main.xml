<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout3">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_add"
                android:id="@+id/button_regist" android:background="#333333"
                android:backgroundTint="#333333" android:layout_weight="1" tools:layout_editor_absoluteY="468dp"
                tools:layout_editor_absoluteX="7dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_gallery"
                android:id="@+id/button_myQR" android:layout_weight="1" android:background="#333333"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/qr_camera" android:layout_weight="1" android:visibility="visible"
                android:background="#333333"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_sort_by_size"
                android:id="@+id/button_profile" android:layout_weight="1" android:background="#333333"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/container" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>